<div class="container">
	<table class="table table-hover">
	    <thead>
	      <tr>
	      	<th>學年期</th>
	        <th>科目代號</th>
	        <th>課程名稱</th>
	        <th>任課教師</th>
	        <th>學分</th>
	        <th>Session</th>
	        <th>教室</th>
	        <th>授課語言</th>
	        <th>得充抵通識</th>
	        <th>通識類別</th>
	        <th>期數(1:學期課 2:學年課)</th>
	        <th>修別</th>
	        <th>核心通識</th>
	        <th>異動資訊</th>
	        <th>備註</th>
	      </tr>
	    </thead>
	    <tbody>
			<% @data.each do |d| %>
				<tr>
					<td><%= d["semester"] %></td>
					<td><%= d["courseid"] %></td>
					<td><%= d["name"] %></td>
					<td><%= d["instructor"] %></td>
					<td><%= d["point"] %></td>
					<td><%= d["session"] %></td>
					<td><%= d["place"] %></td>
					<td><%= simple_format d["language"] %></td>
					<td><%= d["asgeneral"] %></td>
					<td><%= d["generalclass"] %></td>
					<td><%= d["length"] %></td>
					<td><%= simple_format d["choose"] %></td>
					<td><%= simple_format d["coregeneral"] %></td>
					<td><%= d["change"] %></td>	
					<td><%= d["note"] %></td>
				</tr>
			<% end %>
	    </tbody>
	</table>
</div>