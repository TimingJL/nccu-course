<%= render :partial => 'layouts/google_analytics' %>
<div class='row'>
		<div class='col-md-4'>
			<div class='show-page-box' style='margin-top: 20px;'>
				<div class='header'></div>
				<div class='content'>
					<div class='title-box'>
						<h4 class='course-title' style='font-size: 18px;font-family:"微軟正黑體";'><%= @course["name"] %></h4>
					</div>

		        	<div class="list-group" style='margin-top: 10px;font-family:"微軟正黑體";'>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'>課程代碼: <%= @course["courseid"] %></div>
								</div>
							</div>		        	
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-calendar fa-fw" aria-hidden="true"></i><%= @course["semester"] %></div>
									<div style='display: table-cell;'><i class="fa fa-graduation-cap fa-fw" aria-hidden="true"></i>學分: <%= @course["point"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-book fa-fw" aria-hidden="true"></i><%= @course["department"] %></div>
									<div style='display: table-cell;'><i class="fa fa-balance-scale fa-fw" aria-hidden="true"></i><%= @course["generalclass"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-clock-o fa-fw" aria-hidden="true"></i><%= @course["session"] %></div>
									<div style='display: table-cell;'><i class="fa fa-university fa-fw" aria-hidden="true"></i><%= @course["place"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-language fa-fw" aria-hidden="true"></i>授課語言: <%= @course["language"] %></div>
									<div style='display: table-cell;'><i class="fa fa-sitemap fa-fw" aria-hidden="true"></i>修別: <%= @course["choose"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-question-circle fa-fw" aria-hidden="true"></i>得充抵通識: <%= @course["asgeneral"] %></div>
									<div style='display: table-cell;'><i class="fa fa-cubes fa-fw" aria-hidden="true"></i>核心通識: <%= @course["coregeneral"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:150px'><i class="fa fa-tripadvisor fa-fw" aria-hidden="true"></i><%= @course["instructor"] %></div>
								</div>
							</div>
							<div class="list-group-item">
								<div style='display: table-row;'>
									<div style='display: table-cell; width:100%;'><i class="fa fa-check-square-o fa-fw" aria-hidden="true"></i><%= @course["note"] %></div>
								</div>
							</div>
		        	</div>
					<input class='btn btn-default'  type ="button" onclick="history.back()" value="回到上一頁"></input>
					<% if @course["agenda"] != false %>
						<%= link_to '教學大綱',@course["agenda"], class: 'btn btn-warning', style: 'color:white' %>
					<% end %>
					<!-- <p><%= link_to 'Back', courses_path %></p> -->					
				</div>
			</div>			
		</div>

		<!-- <div class='clearfix'></div> -->

		<div class='col-md-8'>
			<div class='show-page-box' style='margin-top: 20px;font-family:"微軟正黑體";'>
				<div class='header'></div>
				<div class='content'>
					<!-- <h4 style='color:gray; text-align: center;'><%= @count %> 則留言</h4> -->
					<br>
					<%= render 'issues/form.html', issue: @issue %>							
					<%= render 'common/issue.html' %>

					<!-- <p><%= link_to 'Back', courses_path %></p> -->				
				</div>
			</div>			
		</div>
</div>