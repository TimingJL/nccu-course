<% @teacherevaluations.each do |t| %>
	<% if t["instructor"].include?(params[:instructor]) %>
		<div id='instructor-box'>
			<div class='instructor-name'><%= t["instructor"] %></div>
		</div>		
		<% t["course"].each do |c| %>
			<div id='evaluation-box'>
				<div>課程名稱: <%= c["name"] %></div>
				<div class="row">
					<div class='col-md-2'>學期: <%= c["year"] %>/<%= c["semester"] %></div>
					<div class='col-md-4'>課程代碼: <%= c["id"] %></div>
					<div class='col-md-2'>學生人數: <%= c["student_num"] %></div>
					<div class='col-md-2'>評分: <%= c["score"] %></div>
				</div>

				<div class="list-group">
					<!-- <div>學生評語:</div>	 -->
					<% for i in 0..c["comments"].length-1 %>
						<a class="list-group-item">
							<%= simple_format c["comments"][i], style: 'font-size: 18px;' %>
						</a>
					<% end %>
				</div>		
			</div>
		<% end %>
	<% end %>
<% end %>

<style type="text/css">
#instructor-box{
	background-color: white;
	margin:0 auto;
	margin-top: 30px;
	padding: 20px;
	font-family: '微軟正黑體', 'cwtexhei','Noto Sans', sans-serif;
	font-size: 30px;
	text-align: center;
	.instructor-name{
		background-color: #2ecc71;
		padding: 20px;
		color: white;
		font-weight: 900;
	}
}

#evaluation-box{
	background-color: white;
	margin:0 auto;
	margin-top: 30px;
	padding: 20px;
	font-family: '微軟正黑體', 'cwtexhei','Noto Sans', sans-serif;
	font-size: 18px;
}	
</style>